<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15dp"
    android:background="@drawable/rounded_edges"
    android:padding="@dimen/row_padding">

    <TextView
        android:id="@+id/market_list_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/offer_text_font_size"
        android:layout_marginEnd="5dp"
        android:text="@string/market_list_sample"
        android:layout_toStartOf="@+id/market_fav_icon"
        />

    <ImageButton
        android:id="@+id/market_fav_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/btn_star_big_off"
        android:tag="unfav"
        android:layout_alignParentEnd="true"
        android:background="#00ffffff"
        android:contentDescription="@string/image_star" />

</RelativeLayout>